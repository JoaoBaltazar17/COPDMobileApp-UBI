<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    tools:context=".FellingUnwellPageQ5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <TextView
            android:id="@+id/txtViewSOSClickableTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:clickable="false"
            android:drawableRight="@drawable/ic_sad"
            android:drawablePadding="10dp"
            android:fontFamily="@font/interbold"
            android:onClick="goSOSPage"
            android:text="Feeling unweel?"
            android:layout_gravity="center"
            android:textSize="22sp" />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txtViewImageVector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_questionhappy"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:drawablePadding="20dp"/>

        <TextView
            android:id="@+id/txtViewtTestResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Test Result %"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_gravity="center" />


        <TextView
            android:id="@+id/txtViewTitleInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95sp"
            android:layout_marginTop="25sp"
            android:text="WHAT TO DO NEXT"
            android:textAlignment="viewStart"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textViewInst1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45sp"
            android:text="Instruction 1"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/textViewInst2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45sp"
            android:text="Instruction 2"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/textViewInst3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45sp"
            android:text="Instruction 3"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/textViewInst4"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45sp"
            android:text="Instruction 4"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/btnShareResultsQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHARE DETAILED REPORT"
            android:layout_gravity="center"
            android:background="@drawable/rectangle_background"
            android:onClick="sendDetailedReportQuestionnaire"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginTop="70dp"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start" >

        <include
            layout="@layout/nav_drawer" />
    </RelativeLayout>




</androidx.drawerlayout.widget.DrawerLayout>
