<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    tools:context=".FellingUnwellPageQ5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <TextView
            android:id="@+id/txtViewSOSClickableTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110sp"
            android:layout_marginTop="20sp"
            android:clickable="false"
            android:drawableRight="@drawable/ic_sad"
            android:drawablePadding="10dp"
            android:fontFamily="@font/interbold"
            android:onClick="goSOSPage"
            android:text="Feeling unweel?"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtViewIconEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190sp"
            android:layout_marginTop="15sp"
            android:padding="10px"
            android:drawableStart="@drawable/ic_sentimentdissa"
            android:textAlignment="viewStart"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtViewTitleInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95sp"
            android:layout_marginTop="65sp"
            android:text="WHAT TO DO NEXT"
            android:textAlignment="viewStart"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textViewInst1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginTop="45sp"
            android:text="Instruction 1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/textViewInst2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginTop="45sp"
            android:text="Instruction 2"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/textViewInst3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginTop="45sp"
            android:text="Instruction 3"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/textViewInst4"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginTop="45sp"
            android:text="Instruction 4"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/btnGoHome"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_marginStart="110sp"
            android:layout_marginTop="105sp"
            android:onClick="onHomeButtonClick" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start" >

        <include
            layout="@layout/nav_drawer" />
    </RelativeLayout>




</androidx.drawerlayout.widget.DrawerLayout>
